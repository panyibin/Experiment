<Page
    x:Class="App8._1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App8._1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:ConnectionId='1' x:Name="Search" Content="Search" HorizontalAlignment="Left" Margin="37,202,0,0" VerticalAlignment="Top"                     />
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="37,124,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="290"/>
        <Button x:ConnectionId='2' Content="GoTo PivotPage" HorizontalAlignment="Left" Margin="37,282,0,0" VerticalAlignment="Top"                        />

    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='3' Label="Begin" Icon="Go"                           ></AppBarButton>
            <AppBarButton x:ConnectionId='4' Label="Stop" Icon="Stop"                             ></AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

